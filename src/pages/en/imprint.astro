  <section class="section-spacing bg-white">
    <div class="container-max max-w-3xl">
      <h1 class="mb-12">Imprint</h1>

      <div class="prose prose-sm max-w-none space-y-8">
        <!-- Company Details -->
        <div>
          <h2>Company Information</h2>
          <p>
            <strong>ALVERIS Advisory GmbH</strong><br />
            <!-- TODO: Add full company address -->
            Street, Building Number<br />
            Postal Code City<br />
            Switzerland
          </p>
        </div>

        <!-- Contact -->
        <div>
          <h2>Contact</h2>
          <p>
            Email: <a href="mailto:hello@alveris.ch">hello@alveris.ch</a><br />
            <!-- TODO: Add phone number if applicable -->
          </p>
        </div>

        <!-- Legal Form -->
        <div>
          <h2>Legal Form</h2>
          <p>
            <!-- TODO: Fill in legal entity type and registration details -->
            Limited Company (GmbH)<br />
            UID/CHE Number: [to be completed]
          </p>
        </div>

        <!-- Responsibility & Liability -->
        <div>
          <h2>Responsibility and Liability</h2>
          <p>
            <!-- TODO: Add comprehensive liability disclaimer -->
            The contents of this website are compiled with great care and regularly updated.
            However, we cannot guarantee the accuracy, completeness and currency of the
            contents. Any liability for damage resulting from the use of this website is
            excluded, insofar as it is not based on gross negligence or intent.
          </p>
        </div>

